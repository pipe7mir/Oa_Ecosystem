{
  "name": "oasis-project-unified",
  "private": true,
  "version": "1.3.0",
  "type": "module",
  "description": "Sistema unificado Oasis con Frontend y Backend-Nest",
  "scripts": {
    "dev:frontend": "vite --host",
    "dev:backend": "nest start --watch -p tsconfig.server.json",
    "dev": "npm run dev:backend & npm run dev:frontend",
    "build:frontend": "vite build --minify terser",
    "build:backend": "rimraf dist/server && npx nest build -p tsconfig.server.json",
    "build": "npm run build:frontend && npm run build:backend",
    "start": "node dist/main.js"
  },
  "dependencies": {
    "@codegenie/serverless-express": "^4.17.1",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^4.0.3",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.0.0",
    "@nestjs/passport": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/typeorm": "^10.0.0",
    "@vitejs/plugin-react": "^5.1.4",
    "axios": "^1.13.5",
    "bcrypt": "^5.1.0",
    "bootstrap": "^5.3.8",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dotenv": "^17.3.1",
    "html2canvas": "^1.4.1",
    "nodemailer": "^6.9.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.18.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-draggable": "^4.5.0",
    "react-router-dom": "^7.13.0",
    "reflect-metadata": "^0.2.0",
    "rimraf": "^5.0.0",
    "rxjs": "^7.8.0",
    "sqlite3": "^5.1.7",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.0",
    "@nestjs/schematics": "^10.1.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.2",
    "@types/aws-lambda": "^8.10.160",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.0",
    "@types/passport-jwt": "^4.0.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jsdom": "^28.1.0",
    "prettier": "^3.1.0",
    "sass-embedded": "^1.97.3",
    "terser": "^5.26.0",
    "ts-loader": "^9.5.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.0",
    "vite": "^6.0.0",
    "vitest": "^4.0.18"
  },
  "overrides": {
    "vite": "^6.0.0"
  }
}